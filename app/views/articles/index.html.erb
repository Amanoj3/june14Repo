<h1 class = "text-center">Listing articles</h1><br><br>
<div class = "center">
  <%= link_to 'New article', new_article_path %>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="5"></th>
    </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><button style = "color:silver"><%= link_to 'Show', article_path(article) %></button></td>
      <td><button class = "btn-warning"><%= link_to 'Edit', edit_article_path(article) %></button></td>
      <td> <button class = "btn-danger"><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>
  </table>
</div>
